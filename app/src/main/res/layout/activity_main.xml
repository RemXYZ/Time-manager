<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/main">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/justButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="xdd" />

        <Button
            android:id="@+id/justButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="xdd2" />
    </LinearLayout>

    <!-- GÃ³rny pasek z przyciskami Ustawienia i Lista Emoji -->
    <include
        layout="@layout/tb_top_bar"
        android:id="@+id/topBar"/>

    <!-- GridLayout for the schedule -->
    <include
        layout="@layout/cc_schedule_grid"
        android:id="@+id/center_content"
        />

    <!-- Dolny panel -->


    <!-- Dolne menu nawigacyjne -->
    <include
        layout="@layout/bp_bottom_panel"
    />

</LinearLayout>
